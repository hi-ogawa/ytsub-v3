{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "include": ["app"],
  "compilerOptions": {
    "paths": {
      // not needed after https://github.com/microsoft/TypeScript/pull/55015
      "#*": ["./app/*"]
    },
    "noPropertyAccessFromIndexSignature": false,
    "exactOptionalPropertyTypes": false,
    "noUncheckedIndexedAccess": false,
    "checkJs": false,
    "noEmit": true,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "types": ["vite/client"],
    "jsx": "react-jsx"
  }
}
