{
  "scripts": {
    "clean": "rm -rf build",
    "dev": "remix dev",
    "dev:all": "concurrently -k 'npm:dev' 'npm:tsc:dev' 'npm:tailwind:dev' 'npm:vite' -c 'bgBlue.bold,bgYellow.bold,bgMagenta.bold,bgGreen.bold'",
    "tsc": "tsc",
    "tsc:dev": "tsc --noEmit --watch --preserveWatchOutput",
    "tailwind": "tailwindcss -o \"./build/tailwind/${NODE_ENV:-development}/index.css\"",
    "tailwind:dev": "pnpm run tailwind -- --watch",
    "vite": "vite",
    "prettier": "prettier -w .",
    "prettier:check": "prettier -c .",
    "eslint": "eslint 'app/**/*.{ts,tsx}' --fix",
    "eslint:check": "eslint 'app/**/*.{ts,tsx}'",
    "lint": "pnpm run prettier && pnpm run eslint",
    "lint:check": "pnpm run prettier:check && pnpm run eslint:check",
    "test": "jest",
    "test:playwright": "playwright test",
    "test:playwright:debug": "PWDEBUG=1 playwright test",
    "netlify:build": "bash scripts/netlify.sh",
    "netlify:build:deploy": "pnpm run netlify:build && netlify deploy --prod",
    "qrcode": "qrcode-terminal http://$(ip -o -4 address list wlan0 | awk '{print $4}' | cut -d / -f 1):3000"
  },
  "dependencies": {
    "@headlessui/react": "^1.5.0",
    "@netlify/functions": "^0.10.0",
    "@remix-run/netlify": "^1.2.2",
    "@remix-run/react": "^1.2.2",
    "@remix-run/server-runtime": "^1.2.2",
    "lodash": "^4.17.21",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-feather": "^2.0.9",
    "react-use": "^17.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@jest/globals": "^27.5.1",
    "@playwright/test": "^1.19.2",
    "@remix-run/dev": "^1.2.2",
    "@remix-run/node": "^1.2.3",
    "@remix-run/serve": "^1.2.2",
    "@types/lodash": "^4.14.179",
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "@vitejs/plugin-react": "^1.2.0",
    "autoprefixer": "^10.4.2",
    "concurrently": "^7.0.0",
    "daisyui": "^2.2.2",
    "esbuild": "^0.14.23",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "jest": "^27.5.1",
    "netlify-cli": "^9.12.3",
    "postcss": "^8.4.7",
    "prettier": "^2.5.1",
    "qrcode-terminal": "^0.12.0",
    "react-router-dom": "^6.2.2",
    "tailwindcss": "^3.0.23",
    "typescript": "4.5.5",
    "vite": "^2.8.6"
  },
  "volta": {
    "node": "16.14.0"
  }
}
